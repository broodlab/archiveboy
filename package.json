{
    "name": "archiveboy",
    "version": "0.0.1",
    "description": "Organization and archiving of photo and video files.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/broodlab/archiveboy.git"
    },
    "author": "Peter Fiedler",
    "license": "MIT",
    "scripts": {
        "build:api-local": "cd api-local && npm run build",
        "build:gui-native": "cd gui-native && npm run build",
        "build:gui-web": "cd gui-web && npm run build",
        "build": "run-p build:*",
        "prettify": "npx prettier --config node_modules/broodlab-toolbox/configs/prettier.js --write '**/*.{css,html,js,json,scss,ts,yml}'",
        "setup:archiveboy": "npm i",
        "setup:api-local": "cd api-local && npm i",
        "setup:gui-native": "cd gui-native && npm i",
        "setup:gui-web": "cd gui-web && npm i",
        "setup": "run-p setup:*",
        "uplate:archiveboy": "ncu -u",
        "uplate:api-local": "cd api-local && ncu -u",
        "uplate:gui-native": "cd gui-native && ncu -u",
        "uplate:gui-web": "cd gui-web && ncu -u",
        "uplate": "run-p uplate:*"
    },
    "devDependencies": {
        "broodlab-toolbox": "git:github.com:broodlab/toolbox.git",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2"
    }
}

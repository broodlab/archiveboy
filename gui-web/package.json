{
    "name": "@archiveboy/gui-web",
    "scripts": {
        "build": "npm run configure-target-env-electron-renderer && gulp build --color",
        "configure-target-env-electron-renderer": "gulp configure-target-env-electron-renderer --color",
        "configure-target-env-web": "gulp configure-target-env-web --color",
        "dev": "npm run configure-target-env-web && ng serve --configuration=web",
        "dev-electron-renderer": "npm run configure-target-env-electron-renderer && ng serve",
        "test": "jest --color",
        "lint": "gulp lint --color",
        "uplate": "ncu -u"
    },
    "jest": {
        "preset": "jest-preset-angular",
        "moduleNameMapper": {
            "@archiveboy/gui-web/(.*)": "<rootDir>/src/main//$1"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/jest.config.ts"
        ]
    },
    "dependencies": {
        "@angular/animations": "~10.0.1",
        "@angular/cdk": "^10.0.1",
        "@angular/common": "~10.0.1",
        "@angular/compiler": "~10.0.1",
        "@angular/core": "~10.0.1",
        "@angular/flex-layout": "^10.0.0-beta.32",
        "@angular/forms": "~10.0.1",
        "@angular/material": "^10.0.1",
        "@angular/platform-browser": "~10.0.1",
        "@angular/platform-browser-dynamic": "~10.0.1",
        "@angular/router": "~10.0.1",
        "@archiveboy/api": "^0.0.1",
        "@archiveboy/api-local": "^0.0.1",
        "@ngrx/effects": "^9.2.0",
        "@ngrx/store": "^9.2.0",
        "@ngrx/store-devtools": "^9.2.0",
        "rxjs": "~6.5.5",
        "tslib": "^2.0.0",
        "zone.js": "~0.10.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.1000.0",
        "@angular/cli": "~10.0.0",
        "@angular/compiler-cli": "~10.0.1",
        "@angular/language-service": "~10.0.1",
        "@archiveboy/toolbox": "^0.0.1",
        "@types/jest": "^26.0.3",
        "@types/node": "^12.12.6",
        "codelyzer": "^5.2.2",
        "electron": "^9.0.5",
        "jest": "^26.1.0",
        "jest-preset-angular": "^8.2.1"
    }
}
